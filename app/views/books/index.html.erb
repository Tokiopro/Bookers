<header>
  <h1>Books</h1>
</header>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", books_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "date-confirm" => "Are you sureï¼Ÿ"  %> </td>
    <% end %>
    </tr>
  </tbody>
  
</table>
<h2>New Book</h2>

  <%= form_with model: @book do |f| %>
  
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create book' %>
  <% end %>

